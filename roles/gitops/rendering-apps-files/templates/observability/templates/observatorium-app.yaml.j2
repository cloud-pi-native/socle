apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: observatorium
  namespace: infra-argocd
spec:
  destination:
    namespace: {{ dsc.observatorium.namespace }}
    server: https://kubernetes.default.svc
  project: default
  sources:
  - chart: observatorium
    repoURL: {{ dsc.observatorium.helmRepoUrl }}
    targetRevision: {{ dsc.observatorium.chartVersion }}
    helm:  
      values: {% raw %}|
        {{ .Values.observatorium | toYaml | nindent 8 }}
{% endraw %}
      valueFiles:
      - ./values.yaml
      - $tenants/helm/values.yaml
  - ref: tenants
    repoURL: "https://{{ gitlab_domain }}/observability/observability.git"
    targetRevision: main
  syncPolicy:
    automated:
      prune: true
    #  selfHeal: true
    syncOptions:
      - CreateNamespace=true
      - ApplyOutOfSyncOnly=true
      - ServerSideApply=true

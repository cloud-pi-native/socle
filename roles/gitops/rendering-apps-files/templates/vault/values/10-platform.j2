vault:
{% if dsc.global.platform == "openshift" %}
  global:
    openshift: true

cpn-ansible-job:
  global:
    platform: openshift 
{% elif dsc.global.platform == "kubernetes" %}
  injector:
    securityContext:
      pod:
        runAsNonRoot: true
        runAsGroup: 1000
        runAsUser: 100
        fsGroup: 1000
      container:
        allowPrivilegeEscalation: false
        capabilities:
          drop:
            - ALL
  
  server:
    statefulSet:
      securityContext:
        pod:
          runAsNonRoot: true
          runAsGroup: 1000
          runAsUser: 100
          fsGroup: 1000
        container:
          allowPrivilegeEscalation: false
{% endif %}

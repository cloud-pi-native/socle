---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: gitlab-app
  namespace: {{ dsc.gitlab.namespace }}
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: gitlab-app-anyuid
  namespace: {{ dsc.gitlab.namespace }}
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: {{dsc_name}}-gitlab-app-rolebinding-anyuid
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: gitlab-app-role-anyuid
subjects:
- kind: ServiceAccount
  name: gitlab-app-anyuid
  namespace: {{ dsc.gitlab.namespace }}

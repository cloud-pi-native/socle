---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: get-sonarqube-role
rules:
  - apiGroups: [""]
    resources: ["secrets"]
    verbs: ["list", "get"]
    resourceNames: ["sonarqube"]
  - apiGroups: [""]
    resources: ["endpoints"]
    verbs: ["list", "get"]
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: get-sonarqube-role-binding
  namespace: {{ dsc.sonarqube.namespace }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: get-sonarqube-role
subjects:
  - kind: ServiceAccount
    name: cpn-ansible-job
    namespace: {{ dsc.sonarqube.namespace }}

---
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: podmonitors-access-role
  namespace: {{ dsc.sonarqube.namespace }}
rules:
  - apiGroups: [""]
    resources: ["podmonitors.monitoring.coreos.com"]
    verbs: ["list", "get", "patch"]
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: podmonitors-access-role-binding
  namespace: {{ dsc.sonarqube.namespace }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: podmonitors-access-role
subjects:
  - kind: ServiceAccount
    name: cpn-ansible-job
    namespace: {{ dsc.sonarqube.namespace }}
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: cpn-ansible-job-binding
  namespace: {{ dsc.sonarqube.namespace }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cpn-ansible-job-role
subjects:
  - kind: ServiceAccount
    name: cpn-ansible-job
    namespace: {{ dsc.sonarqube.namespace }}
